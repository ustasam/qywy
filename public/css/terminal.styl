@import tools
@import common

button-size = 80pt
total-width = 238pt
total = right

#categories-frame, #products-frame, #total-frame
	//
	
#categories-frame, #products-frame, #total-frame, #total, #amount, #cash, #calc, #okcancel, .frame, #summ, #change, #paid
	border-radius radius
	border 0pt solid grey
	pm 0 2pt
	box-shadow()
	//ie border 1
	text-align center!important
	
#total-frame
	//
	
#summ, #change, #paid
	background-color GhostWhite
	size 112pt 32pt
	
#total, #amount
	//
	
#paid
	height 25pt

#categories-frame
	size 90pt 97%
	float opposite-position(total)

#products-frame
	width 200px
	background-color lighten(background, 60%)
	float opposite-position(total)

#total-frame
	float total
	
button
	display inline-block
	box-shadow()
	margin 2.3pt!important
	size sum( total-width/3 - 2.3pt - 3 ), 53pt
	//pm 0 2pt
	//top 0px

button.item img
	size button-size - 6 button-size - 6

button.item span
	position absolute
	bottom 8%
	width 100%
	pm 0!important 0
	font-weight bold
	z-index 2
	
button:hover
	box-shadow()
	
button.item span:first-letter
	font-size 110%
	font-style italic

#total-frame .ui-button-text
	pm 0pt!important, 0pt!important
	//line-height 0!important	// cancel hack
	//position absolute
	//width 100%
	//height 100%

#categories button
	size button-size button-size

#products button
	size button-size button-size

button span
	font-size 32pt
	display inline-block
	
button#cancel span
	font-size 18pt
	//height 100%
	display inline-block
	
table#amount
	width total-width
	pm 0 0pt

table#amount tr td
	pm 2pt 0pt

table#total
	size total-width auto
	background-color GhostWhite
	font-size 12pt
	line-height 0.75
	pm 0 0

table#total th,td
	padding 1px 5px 1px 5px

table#total td
	border 0px solid grey
	border-width 1px 0px 0px 0

td.label
	font-size 11pt

span.val
	pm 0 0